doctype html
html.no-js(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    meta(name='description', content='Tool to load CSV and JSON text files to Elasticsearch server')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    // Place favicon.ico in the root directory
    link(rel='stylesheet', href='css/normalize.css')


    // Bootstrap core CSS
    //link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", rel='stylesheet')
    link(href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/paper/bootstrap.min.css', rel='stylesheet')
    
    link(rel='stylesheet', href='css/main.css')

    script(src='js/vendor/modernizr-2.8.3.min.js')
  body
    //if lt IE 8
      p.browserupgrade
        | You are using an 
        strong outdated
        |  browser. Please 
        a(href='http://browsehappy.com/') upgrade your browser
        |  to improve your experience.
    // Add your site or application content here
    .container
      h5 1. Enter Elasticsearch address:port index and type 
      form.form-inline
        input#hosts.form-control(value='55.55.55.55:9200')
        input#indexName.form-control(value='govwiki')
        input#typeName.form-control(value='gov')
      <br>
      
      h5 2. Select a CSV file
      input#chooseFileButton(type='file')
      <br>
      .panel.panel-default.step-3 
        .panel-body
          h5.step-3 Check field names and data types
        #head_table_container.panel-body

      h5.step-3 3. Click to upload data
      input#readFileButton.step-3.btn.btn-primary(type='button' value='Read File')
      .step-4  
        .progress
          .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 0;') 
        #counter
    
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
