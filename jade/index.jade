        to improve your experience.</p>
    // Add your site or application content here



    .navbar.navbar-inverse(role='navigation', style='padding-bottom:10px;')
      .container
        .row(style="border-bottom:0px solid white;")
          a.navbar-brand(href='#') CSV 2 Elastic
        //.navbar-header.row
          a.navbar-brand(href='#') CSV 2 Elastic
          .navbar-form.text-right(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            a(href='#') settings

          //button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
         

        

        //.navbar-collapse.collapse
          form.navbar-form.navbar-right(role='form')
            .form-group
              input.form-control(type='text', placeholder='Email')
            .form-group
              input.form-control(type='password', placeholder='Password')
            button.btn.btn-success(type='submit') Sign in

        form.row(data-persist="garlic")
          .col-xs-4
            label.control-liabel(for='hosts') address:port
            input#hosts.form-control(name="hosts", type='text', placeholder='localhost:9200')
          .col-xs-4
            label.control-liabel(for='indexName') index name
            input#indexName.form-control(name="indexName", type='text', placeholder='myindex')
          .col-xs-4
            label.control-liabel(for='typeName') type name
            input#typeName.form-control(name="typeName", type='text', placeholder='mytype')
        // /.navbar-collapse




    .container
      .row
          .col-xs-4
            input#chooseFileButton.filestyle(type='file', 
              data-buttonText="&nbsp;&nbsp;Choose CSV file", 
              data-buttonName="btn-primary", 
              data-size="g", 
              data-buttonBefore="false",
              )
      br
      .panel.panel-default.step-3 
        .panel-body
          h5.step-3 Check field names and data types
        #head_table_container.panel-body

      .step-3
        input#readFileButton.step-3.btn.btn-primary(type='button' value='Upload')
        span.step-4
          span#counter
      .step-4  
        .progress
          .progress-bar.progress-bar-success(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 0;') 
        span.step-4
          span#status
    
